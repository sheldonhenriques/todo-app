<html>
    <head>
        <title>List</title>
        <script
          src="https://code.jquery.com/jquery-3.3.1.min.js"
          integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
          crossorigin="anonymous"></script>
        <link href="/assests/styles.css" rel="stylesheet" type="text/css" />
        <script src="/assests/todo-list.js"></script>
    </head>
    <body>
        <div id="list-table">
            <form>
                <input type="text" class="inputClass" name="name" placeholder="Add new list..." required />
                <button type="submit">Add List</button>
            </form>
            <ul>
                <% for(var i = 0; i < lists.length; i++) { %>
                <li id=<%=lists[i]._id%> class='list-class'><%= lists[i].item %></li>
                <% } %>
            </ul>
        </div>
    </body>
</html>